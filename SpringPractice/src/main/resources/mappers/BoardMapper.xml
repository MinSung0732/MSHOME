<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.practice.ex.mapper.BoardMapper">
	
	<select id="getBoardList" resultType="com.practice.ex.dto.board.BoardDto">
		SELECT * FROM Board ORDER BY B_No DESC LIMIT #{startRow},${perPage}
	</select>
	
	<select id="getTotalCount" resultType="Long">
		SELECT COUNT(*) FROM Board WHERE B_Category = #{category}
	</select>
	
</mapper>